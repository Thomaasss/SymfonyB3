{% extends 'base.html.twig' %}

{% block body %}

    <h1>
    {% if editMode %}
            Modification d'un trajet
        {% else %}
            Création d'un trajet
        {% endif %}
    </h1>

    {{ form_start(formBooking) }}

    <div class="form-group">
        <label for="">Ville de départ</label>
        {{ form_widget(formBooking.departure) }}
    </div>
    <div class="form-group">
        <label for="">Date et heure de départ</label>
        {{ form_widget(formBooking.departureDateTime) }}
    </div>
    <div class="form-group">
        <label for="">Ville d'arrivée</label>
        {{ form_widget(formBooking.arrival) }}
    </div>
    <div class="form-group">
        <label for="">Date et heure d'arrivée</label>
        {{ form_widget(formBooking.arrivalDateTime) }}
    </div>
    <div class="form-group">
        <label for="">Choix du train</label>
        {{ form_widget(formBooking.train) }}
    </div>

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Ajouter le trajet
        {% endif %}
    </button>

    {{ form_end(formBooking)}}

{% endblock %}